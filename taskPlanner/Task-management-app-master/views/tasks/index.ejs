<!DOCTYPE html>
<html>
  <head>
    <title>Task List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  </head>
  <body>
    <h2 >Tasks </h2>
    <div>
      <br>
      <% if(tasks.length>0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Task Name</th>
            <th>Description </th>
            <th>Assignee</th>
            <th colspan="1">Start Date <br>(mm-dd-yyyy)</th>
            <th colspan="1">End Date <br>(mm-dd-yyyy)</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<tasks.length;i++) { %>
            <tr>
              <td><a href="/tasks/show/<%= tasks[i]._id%>"><%= tasks[i].title%></a></td>
              <td ><%= tasks[i].description%></td>
              <td><%= tasks[i].assignee%></td>
              <td><%= moment.utc(tasks[i].startDate).format("MM-DD-YYYY") %></td>
              <td><%= moment.utc(tasks[i].endDate).format("MM-DD-YYYY")%></td>
              <td><%= tasks[i].status%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No tasks found.</div>
      <% } %>
    <input type="button" id="createButton" onclick="location.href='/tasks/create';" value="Create Task" />
    <input type="button" id="createButton" onclick="location.href='/';" value="Home page" />
    </div>
  </body>
</html>
